<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/bottom_btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/word"
            android:text=""
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/unlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注销" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_700">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/maodian2">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/maodian1"
                    android:id="@+id/navigation_one"
                    android:icon="@drawable/bottom_btn2"
                    android:text="主页"/>
                <TextView
                    android:id="@+id/maodian1"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/maodian1"
                    android:id="@+id/navigation_two"
                    android:icon="@drawable/bottom_btn2"
                    android:text="图表"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/maodian2"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/maodian2"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/maodian3"
                    android:id="@+id/navigation_there"
                    android:text="音乐"/>
                <TextView
                    android:id="@+id/maodian3"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/maodian3"
                    android:id="@+id/navigation_four"
                    android:text="我的"/>
            </RelativeLayout>
        </RelativeLayout>
        <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <EditText
            android:id="@+id/pwd"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:backgroundTint="@color/white"
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <Button
            android:id="@+id/reg"
            android:backgroundTint="@color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>